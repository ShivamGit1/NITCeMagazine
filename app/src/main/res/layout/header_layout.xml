<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@drawable/header_back">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePictureNavDraver"
        android:layout_width="106dp"
        android:layout_height="0dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toTopOf="@+id/textViewEmailNavDrawer"
        app:layout_constraintStart_toStartOf="@+id/textViewEmailNavDrawer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewEmailNavDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Email"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/textViewRoleNavDrawer"
        app:layout_constraintStart_toStartOf="@+id/textViewRoleNavDrawer"
        app:layout_constraintTop_toBottomOf="@+id/profilePictureNavDraver" />

    <TextView
        android:id="@+id/textViewRoleNavDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="6dp"
        android:text="Role"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewEmailNavDrawer" />
</androidx.constraintlayout.widget.ConstraintLayout>